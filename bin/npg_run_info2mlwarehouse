#!/usr/bin/env perl

use strict;
use warnings;
use FindBin qw($Bin);
use lib ( -d "$Bin/../lib/perl5" ? "$Bin/../lib/perl5" : "$Bin/../lib" );
use Getopt::Long;
use Pod::Usage;

use WTSI::DNAP::Warehouse::Schema;
use npg_warehouse::loader::run_info;

our $VERSION = '0';

my $help             = q[];
GetOptions ('help' => \$help,);
if ($help) { pod2usage(0); }

npg_warehouse::loader::run_info->new(
  schema_wh  => WTSI::DNAP::Warehouse::Schema->connect(),
)->copy_npg_tables();

exit 0;

__END__

=head1 NAME

npg_run_info2mlwarehouse

=head1 SYNOPSIS

Script to load sequencing run information to the warehouse.

=head1 DESCRIPTION

=head1 USAGE

  npg_run_info2mlwarehouse

=head1 REQUIRED ARGUMENTS

None

=head1 OPTIONS

  --help     brief help message

=head1 EXIT STATUS

0

=head1 CONFIGURATION

=head1 DIAGNOSTICS

=head1 DEPENDENCIES

=over

=item strict

=item warnings

=item lib

=item FindBin

=item Getopt::Long

=item Pod::Usage

=item WTSI::DNAP::Warehouse::Schema

=item npg_warehouse::loader::run_info

=back

