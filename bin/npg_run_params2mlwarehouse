#!/usr/bin/env perl

use strict;
use warnings;
use FindBin qw($Bin);
use lib ( -d "$Bin/../lib/perl5" ? "$Bin/../lib/perl5" : "$Bin/../lib" );
use Log::Log4perl qw(:easy :levels);
use Try::Tiny;

use npg_warehouse::loader::run_files;

our $VERSION = '0';

my $layout = '%d %-5p %c - %m%n';
my $level  = $INFO;
Log::Log4perl->easy_init({layout => $layout,
                          level  => $level,
                          utf8   => 1});

if (defined $ENV{dev} && $ENV{dev}) {
  WARN(join q[ ], q[Using], $ENV{dev}, q[ml warehouse database]);
}

my $loader;
my $file;

try {
  $loader = npg_warehouse::loader::run_files->new_with_options();
  INFO('Loading run params. for run ' . $loader->id_run);
  $file = $loader->load();
} catch {
  FATAL($_);
  exit 1;
};

INFO("Loaded $file for run " . $loader->id_run);

exit 0;

__END__

=head1 NAME

npg_run_params2mlwarehouse

=head1 SYNOPSIS

Script to load a file with Illumina run parameters to ml warehouse.

=head1 DESCRIPTION

=head1 USAGE

  npg_run_params2mlwarehouse --id_run 45 \
  --path_glob '[RUN_FOLDER_PATH]/{r,R}unParameters.xml'

=head1 REQUIRED ARGUMENTS

  --id_run
  --path_glob

=head1 OPTIONS

  --help       brief help message
  --id_run     NPG run id
  --path_glob  a path glob which should resolve to exactly one file

=head1 EXIT STATUS

0 if exited normally

1 if a fatal error occured

=head1 CONFIGURATION

=head1 DIAGNOSTICS

=head1 DEPENDENCIES

=over

=item strict

=item warnings

=item lib

=item FindBin

=item Try::Tiny

=item Log::Log4perl

=item npg_warehouse::loader::run_param

=back

=head1 INCOMPATIBILITIES

