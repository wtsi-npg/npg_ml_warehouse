#!/usr/bin/env perl

use strict;
use warnings;
use FindBin qw($Bin);
use lib ( -d "$Bin/../lib/perl5" ? "$Bin/../lib/perl5" : "$Bin/../lib" );
use Log::Log4perl qw(:easy :levels);
use Try::Tiny;

use npg_warehouse::loader::elembio::run;

our $VERSION = '0';

my $layout = '%d %-5p %c - %m%n';
my $level  = $INFO;
Log::Log4perl->easy_init({layout => $layout,
                          level  => $level,
                          utf8   => 1});

if (defined $ENV{dev} && $ENV{dev}) {
  INFO(join q[ ], q[Using], $ENV{dev}, q[databases]);
}

npg_warehouse::loader::elembio::run->new_with_options();

exit 0;

__END__

=head1 NAME

npg_elembio_run2mlwarehouse

=head1 SYNOPSIS

Script to load Elembio run data to C<eseq_run_lane_metrics> and
C<eseq_product_metrics> tables of multi-LIMS warehouse database and,
if appropriate, to link C<eseq_product_metrics> rows to C<eseq_flowcell>
table rows, i.e. to LIMS data.

=head1 DESCRIPTION

=head1 USAGE

 npg_elembio_run2mlwarehouse --runfolder_path [RUN_FOLDER_PATH] --id_run [ID_RUN]

=head1 REQUIRED ARGUMENTS

runfolder_path
id_run

=head1 OPTIONS

  --help           brief help message
  --id_run         tracking run ID
  --runfolder_path directory path of the Elembio runfolder

=head1 EXIT STATUS

0 if exited normally

any non-zero if a fatal error occured

=head1 CONFIGURATION

=head1 DIAGNOSTICS

=head1 DEPENDENCIES

=over

=item strict

=item warnings

=item lib

=item FindBin

=item Try::Tiny

=item Pod::Usage

=item Getopt::Long

=item Log::Log4perl

=item npg_warehouse::loader::elembio::run

=item WTSI::DNAP::Warehouse::Schema

=back

=head1 INCOMPATIBILITIES

